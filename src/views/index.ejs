<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CineMatch Alerts</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <main>
    <section class="alert-list">
      <h1>Alerts</h1>
      <% if (alerts.length > 0) { %>
        <ul>
          <% alerts.forEach(alert => { %>
            <li>
              <strong><%= alert.title %></strong> - <%= alert.message %>
              <span class="alert-date"><%= alert.createdAt.toLocaleString() %></span>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No alerts found.</p>
      <% } %>
      <form action="/alerts" method="POST">
        <input type="text" name="title" placeholder="Alert Title" required>
        <textarea name="message" placeholder="Alert Message" required></textarea>
        <button type="submit">Create Alert</button>
      </form>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
